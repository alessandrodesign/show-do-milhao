{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "baseUrl": "./",
        "paths": {}
    },
    "include": [
        "resources/js/**/*",
        "resources/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
